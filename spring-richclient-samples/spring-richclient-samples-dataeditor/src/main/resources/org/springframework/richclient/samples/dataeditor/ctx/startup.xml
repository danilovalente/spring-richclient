<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <bean id="splashScreen" class="org.springframework.richclient.samples.dataeditor.ui.DataEditorSplash">
    <property name="image" value="classpath:/org/springframework/richclient/samples/dataeditor/images/splash-screen.jpg" />
  </bean>

  <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
    <property name="basenames">
      <list>
        <value>org.springframework.richclient.samples.dataeditor.messages.splash</value>
      </list>
    </property>
  </bean>

</beans>