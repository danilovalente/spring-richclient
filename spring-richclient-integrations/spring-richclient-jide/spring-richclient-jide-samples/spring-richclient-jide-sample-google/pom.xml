<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>spring-richclient-jide-samples</artifactId>
    <groupId>org.springframework.richclient</groupId>
    <version>1.1.1-SNAPSHOT</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>

  <groupId>org.springframework.richclient</groupId>
  <artifactId>spring-richclient-jide-sample-google</artifactId>
  <packaging>pom</packaging>
  <name>Spring Rich Client integrations : JIDE Google Sample</name>
  <description>
    Google sample of the JIDE components and the Spring RCP project
  </description>

  <dependencies>
    <dependency>
      <groupId>org.springframework.richclient</groupId>
      <artifactId>spring-richclient-jide-components</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.springframework.richclient</groupId>
      <artifactId>spring-richclient-jide-docking</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.springframework.richclient</groupId>
      <artifactId>spring-richclient-sandbox</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>concurrent</groupId>
      <artifactId>concurrent</artifactId>
      <version>1.3.4</version>
    </dependency>
    <dependency>
      <groupId>google</groupId>
      <artifactId>soapsearch</artifactId>
      <version>2002-08-30</version>
    </dependency>
    <dependency>
      <groupId>org.jdesktop.jdic</groupId>
      <artifactId>jdic-shared</artifactId>
      <version>0.9.3</version>
    </dependency>
    <dependency>
      <groupId>com.jgoodies</groupId>
      <artifactId>forms</artifactId>
      <version>1.2.1</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>com.jgoodies</groupId>
      <artifactId>looks</artifactId>
      <version>2.2.0</version>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>nix</id>
      <activation>
        <os>
          <family>unix</family>
        </os>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.jdesktop.jdic</groupId>
          <artifactId>jdic-native-linux</artifactId>
        </dependency>
        <dependency>
          <groupId>org.jdesktop.jdic</groupId>
          <artifactId>jdic-stub-linux</artifactId>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>win</id>
      <activation>
        <os>
          <family>windows</family>
        </os>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.jdesktop.jdic</groupId>
          <artifactId>jdic-native-windows</artifactId>
        </dependency>
        <dependency>
          <groupId>org.jdesktop.jdic</groupId>
          <artifactId>jdic-stub-windows</artifactId>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
</project>
